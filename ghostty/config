# GTK / Window
gtk-titlebar = false
window-padding-balance = true
window-padding-color = background

# Cursor
cursor-style = bar
mouse-hide-while-typing = true


# Keybind
keybind = ctrl+shift+p=increase_font_size:1
keybind = ctrl+shift+m=decrease_font_size:1
keybind = ctrl+shift+o=reset_font_size

keybind = ctrl+shift+page_up=next_tab
keybind = ctrl+shift+page_down=previous_tab

keybind = ctrl+shift+z=new_split:right


# Free keybind (for micro for exemple)
keybind = ctrl+page_up=unbind
keybind = ctrl+page_down=unbind
keybind = ctrl+delete=unbind
keybind = ctrl+backspace=unbind

keybind = ctrl+shift+up=unbind
keybind = ctrl+shift+down=unbind
keybind = ctrl+shift+left=unbind
keybind = ctrl+shift+right=unbind
