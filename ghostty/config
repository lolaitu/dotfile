# Font Settings
font-family = 			"UbuntuMono Nerd Font"
font-size = 				18

# Themes
theme = Dracula

# Background Opacity
background-opacity = 0.8
unfocused-split-opacity = 0.7

# Shader
custom-shader-animation = true
